extends ../../layouts/default.pug
block main 
	h1 Trang sản phẩm
	div(class="card mb-3")
		div(class="card-header") Lọc và tìm kiếm 
		div(class="card-body")
			div(class="row")
				div(class="col-6")
					each item in filterStatus
						button(class=`btn btn-sm btn-outline-success mr-1 ${item.active}` button-status=item.status) #{item.name}
				div(class="col-6")
					form(method="get" id="form-search")
						div(class="input-group")
							input(type="text" placeholder="Nhập từ khoá ..." name="keyword" class="form-control" value=keyword)
							div(class="input-group-append")
								button(class="btn btn-success" type="submit") Tìm kiếm
	div(class="card mb-3")
		div(class="card-header") Danh sách sản phẩm
		div(class="card-body")
			table(class="table table-hover table-sm")
				thead
					tr 
						th STT 
						th Hình ảnh 
						th Tiêu đề
						th Giá
						th Trạng thái
						th Hành động
				
				tbody
					each product, index in products
						tr
							td #{index + 1}
							td
								img(src=product.thumbnail, alt=product.title width="100px" height="auto")
							td #{product.title}
							td #{product.price}$
							td
								if product.status == "active"
									a(href="#" class="badge badge-success") Hoạt động
								else 
									a(href="#" class="badge badge-danger") Dừng hoạt động 
							td 
								button(class="btn btn-warning btn-sm") Sửa
								button(class="btn btn-danger btn-sm ml-1") Xoá  